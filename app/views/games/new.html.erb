<h2>New game</h2>

<div class="grid">
  <ul>
    <% @letters.each do |letter| %>
      <li><%= letter %></li>
    <% end %>
  </ul>
</div>

<h4>What is the longest word you can find?</h4>
<div class="search">
  <form action="/score" method="post">
    <input type="text" name="answer" class="question">
    <input type="submit" value="Play!" class="button">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
